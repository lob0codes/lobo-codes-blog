model Post {
  id  Int @id @default(autoincrement())
  title String  @db.VarChar(255)

  content String?

  tags Tag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Tag {
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)

  posts Post[]
}