generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

//Config for dev and Neon prod.
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Config for prod in vercel.
// datasource db {
